<!DOCTYPE html>
<html>
  <head>
    <title>Tascal</title>
    <%= favicon_link_tag 'Tascal.png'%>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <main id="<%= page_identifier %>">

      <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">
          TasCal
        </a>
        <ul class="navbar-nav ml-auto">
          <!--
          <li class="nav-item active">
            <a class="nav-link" href="/task/insert">タスクの一覧</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/schedule/insert">予定の一覧</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/about">このアプリについて</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/kiyaku">利用規約</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/privacy">プライバシーポリシー</a>
          </li>
          -->
          <li class="nav-item active">
            <% if current_user then %>
              <div class="nav-item dropdown nav-avatar">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <img class="img-thumbnail" width="40" height="40" src="<%= get_current_user_avator %>">
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                  <span class="dropdown-item user-id">
                    <span><%= get_current_user_id %></span>
                    <span>としてログイン中</span>
                  </span>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href="/logout">ログアウト</a>
                </div>
              </div>
            <% else %>
              <a href="/login"><%= image_tag('btn_google_signin_dark_pressed_web.png', :size => "166x40") %></a>
            <% end %>
          </li>
        </ul>
      </nav>

      <% unless page_identifier === "page-about" %>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      <% end %>

      <%= yield %>

    </main>
  </body>
</html>
