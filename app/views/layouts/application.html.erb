<!DOCTYPE html>
<html>
  <head>
    <title>Tascal</title>
    <%= favicon_link_tag 'Tascal.png'%>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">TasCal</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/task/insert">タスクの一覧</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/schedule/insert">予定の一覧</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/about">このアプリについて</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/kiyaku">利用規約</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/privacy">プライバシーポリシー</a>
          </li>
          <li class="nav-item active">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-task_insert" >
            タスクを追加
            </button>
          </li>
          <li class="nav-item active">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-schedule_insert" >
            予定を追加
            </button>
          </li>
          <!-- <li class="nav-item"> -->
            <!-- <a class="nav-link disabled" href="#">Disabled</a> -->
          <!-- </li> -->
        </ul>
      </div>
      <div class="form-inline my-2 my-lg-0">

        <% if current_user then %>
          <div class="nav-item dropdown nav-avatar">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <img class="img-thumbnail" width="40" height="40" src="<%= get_current_user_avator %>">
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <span class="dropdown-item user-id">
                <span><%= get_current_user_id %></span>
                <span>としてログイン中</span>
              </span>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/logout">ログアウト</a>
            </div>
          </div>
        </div>
      <% else %>
        <a href="/login"><%= image_tag('btn_google_signin_dark_pressed_web.png', :size => "166x40") %></a>
      <% end %>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>

    <!--task insert モーダルウィンドウ内容 -->
    <div class="modal fade" id="modal-task_insert" tabindex="-1" role="dialog" area-labelledby="modal" area-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="demoModalTitle">タスクを追加</h5>
            <button tupe="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span> 
            </button>
          </div>
          <div class="modal-body">
            <p>
            <%= form_tag("/task/insert", method: "post", onsubmit: "return validate_task()") do %>
            <div class="row">

              <div class="col-sm-6">
                <p>タスク名</p>
                <p>
                  <%= text_field_tag(:name) %>
                </p>
              </div>
              <div class="col-sm-6">
                <p>締切日時</p>
                <p>
                  <%= text_field_tag(:year, "", id: 'input-year', type: "hidden") %>
                  <%= text_field_tag(:month, "", id: 'input-month', type: "hidden") %>
                  <%= text_field_tag(:day, "", id: 'input-day', type: "hidden") %>
                  <%= text_field_tag(:hour, "", id: 'input-hour', type: "hidden") %>
                  <%= text_field_tag(:minute, "", id: 'input-minute', type: "hidden") %>
                  <%= text_field_tag :deadline, "", id: 'input-deadline' %>
                </p>
              </div>
            </div>
          </p>
          <div class="row">
            <div class="col-sm-12">
              <%= submit_tag("追加", class: "btn btn-primary") %>
            </div>
          </div>
          <% end %>
          </div>
          <div class="modal-footer">
            <!--
            <button tupe="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
            <button tupe="button" class="btn btn-secondary">botan</button>
            -->
          </div>
        </div>
      </div>
    </div> 

    <!--schedule insert モーダルウィンドウ内容 -->
    <div class="modal fade" id="modal-schedule_insert" tabindex="-1" role="dialog" area-labelledby="modal" area-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="demoModalTitle">予定を追加</h5>
            <button tupe="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span> 
            </button>
          </div>
          <div class="modal-body">
            <p>
            <%= form_tag("/schedule/insert", method: "post", onsubmit: "return validate_schedule()") do %>
              <div class="row">
                <div class="col-sm-4">
                  <p>予定名</p>
                  <%= text_field_tag(:name) %>
                </div>
                <div class="col-sm-4">
                  <p>開始日時</p>
                  <%= text_field_tag(:s_year, "", id: 'input-s-year', type: "hidden") %>
                  <%= text_field_tag(:s_month, "", id: 'input-s-month', type: "hidden") %>
                  <%= text_field_tag(:s_day, "", id: 'input-s-day', type: "hidden") %>
                  <%= text_field_tag(:s_hour, "", id: 'input-s-hour', type: "hidden") %>
                  <%= text_field_tag(:s_minute, "", id: 'input-s-minute', type: "hidden") %>
                  <%= text_field_tag :deadline, "", id: 'input-s-date' %>
                </div>
                <div class="col-sm-4">
                  <p>終了日時</p>
                  <%= text_field_tag(:e_year, "", id: 'input-e-year', type: "hidden") %>
                  <%= text_field_tag(:e_month, "", id: 'input-e-month', type: "hidden") %>
                  <%= text_field_tag(:e_day, "", id: 'input-e-day', type: "hidden") %>
                  <%= text_field_tag(:e_hour, "", id: 'input-e-hour', type: "hidden") %>
                  <%= text_field_tag(:e_minute, "", id: 'input-e-minute', type: "hidden") %>
                  <%= text_field_tag :deadline, "", id: 'input-e-date' %>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <%= submit_tag("追加", class: "btn btn-primary") %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="modal-footer">
            <!--
            <button tupe="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
            <button tupe="button" class="btn btn-secondary">botan</button>
            -->
          </div>
        </div>
      </div>
    </div> 
  </body>
</html>
